<section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Brand Management</h2> </h2>
                    <p>Add, edit or delete a Brand</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/brands" method="post" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Brand Name</label>
                                    <input type="text" name="brand" placeholder="Type here" class="form-control" id="product_name" />
                                </div>
                                {{!-- <div class="mb-4">
                                    
                                        <label class="form-label">Images</label>
                                       <img src="/adminassets/imgs/theme/upload.svg" id="imgView" alt="" style="width:100px; height:100px;" >
                                        <input name="image" onchange="viewImage(event)" class="" type="file" id="gallery-photo-add" multiple="multiple" required>
                                    
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Parent</label>
                                    <select name="brand" class="form-select">
                                        <option>Btwin</option>
                                        <option>HRX</option>
                                        <option>cosmic</option>
                                        <option>firefox</option>
                                        <option>KTM</option>
                                    </select>
                                </div> --}}
                                {{!-- <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea name="description" placeholder="Type here" class="form-control"></textarea>
                                </div> --}}
                                <div class="mb-4">
                                    
                                        <label class="form-label">Images</label>
                                       <img src="/adminassets/imgs/theme/upload.svg" id="imgView" alt="" style="width:100px; height:100px;" >
                                        <input name="image" onchange="viewImage(event)" class="" type="file" id="gallery-photo-add"  required>
                                    
                                </div>
                                <div class="d-grid">
                                    <button type="submit"class="btn btn-primary">Create Brand</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </th>
                                            <th>ID</th>
                                            <th>Brand</th>
                                            <th>Logo</th>
                                            
                                            <th >Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each brand}}
                                        <tr>
                                            <td class="text-center">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </td>
                                            <td>{{inc @index}}</td>
                                            <td><b>{{this.brand}}</b></td>
                                             <td><img src="/images/{{this.img.[0]}}"class="img-sm img-thumbnail "  alt=""></td>
                                            <td >
                                                <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="#">View detail</a>
                                                        <a class="dropdown-item" href="#">Edit info</a>
                                                        <a class="dropdown-item text-danger" href="#">Delete</a>
                                                    </div>
                                                </div> <!-- dropdown //end -->
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section>



        <script>
function viewImage(event){
document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
               }
</script>