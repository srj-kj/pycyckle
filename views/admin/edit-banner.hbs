<div class="content-main">
            <div class="row">
                <div class="col-12">
                    
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                    </div>
                </div>
            </div>
             <form action="/admin/edit-banner/{{banner._id}}" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Banner title</label>
                                        <input type="text"name='title' placeholder="Type here" value="{{banner.title}}" class="form-control">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <input type="text"name='subtitle' placeholder="Type here" value="{{banner.subtitle}}" class="form-control">

                                    </div>
                                    
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Cost in INR</label>
                                        <input type="text"name='price' placeholder="â‚¹00.0" value="{{banner.price}}" class="form-control">
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                           
                            <hr class=" mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Media</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mt-0">
                                        <label class="form-label">Images</label>
                                      <img src="/images/{{banner.img.[0]}}" id="imgView" alt="" style="width:100px; height:100px;" >
                                        <input name="image" onchange="viewImage(event)" class="mt-3" type="file" id="gallery-photo-add" multiple="multiple" required>
                                    </div>
                                    <button type="submit"  class="btn btn-primary btn-sm mt-3">Edit Product</button>
                                </div> <!-- col.// -->
                                
                                </div> <!-- col.// -->
                            </div> <!-- .row end// -->
                        </div>
                    </div>
                    </div>
                    </div>
                    </form>
                </div>
            </div>
            </div>


            <script>
               function viewImage(event){
                document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
               }
              
            </script>