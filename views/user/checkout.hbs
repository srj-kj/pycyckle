											<h2 class="card-title">
												<input name="payment-method" type="radio" value="COD" checked>
												<span class="px-2">Cash on delivery</span>

											</h2>
										</div><!-- End .card-header -->

									</div><!-- End .card -->
									{{#if shopWithBalance}}
