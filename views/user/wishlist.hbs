 <script>
            function moveToCart(productId){
              $.ajax({
                    url:'/move-to-cart/'+productId,
                    method:'get',
                    success:(response)=>{
                        if(response.status){
                            let count=$('#cart-count').html()
                            count=parseInt(count)+1
                            $('#cart-count').html(count)
                            
                        }
                        window.location.href="/cart"
                    }
                    })
                    }
                </script>